@page "/images/create";

@layout ImageLayout

@using System.Text.Json
@using System.Text

@inject ImageApiService ImageApiService
@inject NavigationManager NavigationManager

<SubTitle ReturnUrl="/images" ReturnTitle="Index">
    Create
</SubTitle>

<Form TModel="CreateImageFormModel" Model="_model" OnValidSubmit="() => Submit(_model)" >
    <Template>
        <ImageInputs Model="_model" />

        <Buttons>
            <li><button type="submit">Create</button></li>

            <li><button type="reset" class="warning">Reset</button></li>
        </Buttons>
    </Template>
</Form>

@code {
    private CreateImageFormModel _model = new();

    private string query => new Uri(NavigationManager.Uri).Query;

    private async Task Submit(CreateImageFormModel model)
    {
        if(model.ToMultipartFormDataContent() is not { } content)
        {
            return;
        }

        var serviceResult = await ImageApiService.Create(content);

        if(serviceResult?.Data is null)
        {
            return;
        }

        NavigationManager.NavigateTo($"images{query}");
    }
}
