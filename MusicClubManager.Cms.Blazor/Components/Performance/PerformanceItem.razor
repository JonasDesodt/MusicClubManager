
<div>
    @if (!string.IsNullOrEmpty(Model.ArtistResult.Image))
    {
        <img src="@($"https://localhost:7188/image/{Model.ArtistResult.Image}")" alt="@Model.ArtistResult.Name" />
    }

    <div>
        <ul class="item">
            <li><h5>@Model.ArtistResult.Name</h5></li>
            <li>@(Model.Start?.ToShortTimeString() ?? "--:--")</li>
        </ul>

        @if (Buttons is not null)
        {
            <Buttons>
                @Buttons
            </Buttons>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public required LineupPerformanceResult Model { get; set; }

    [Parameter]
    public RenderFragment? Buttons { get; set; }
}
