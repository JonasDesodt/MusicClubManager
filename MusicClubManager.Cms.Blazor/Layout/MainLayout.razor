@inherits LayoutComponentBase

<header class="@(_isMenuOpen ? "menu-open" : "")">
    <div>
        <h1><NavLink href="/" @onclick="() => _isMenuOpen = false">Music Club Manager</NavLink></h1>

        @if (_isMenuOpen)
        {
            <button @onclick="() => _isMenuOpen = false">Close</button>
        }
        else
        {
            <button @onclick="() => _isMenuOpen = true">Open</button>
        }
    </div>

    <MainMenu OnNavigationStarted="() => _isMenuOpen = false"></MainMenu>
</header>

<main>
    <ErrorBoundary>
            @Body
    </ErrorBoundary>
</main>

<footer>
    <p>&copy 2024 Music Club Manager</p>
</footer>

@code {
    private bool _isMenuOpen = false;
}