@model PagedServiceResult<IList<LineupResult>>

@{
    ViewData["Title"] = "Agenda";
}

<a asp-controller="Home" asp-action="Index" class="return">← Home</a>

<h2>@ViewData["Title"]</h2>

@if (Model.Data is { } lineupResults)
{
    <ul>
        @foreach (var lineupResult in lineupResults)
        {
            <Partial name="_LineupPartial" Model="@lineupResult" />
        }
    </ul>

    <Partial name="_PaginationPartial" Model="@new Pagination {Page = (int)Model.Page, PageSize = (int)Model.PageSize, TotalCount = (int)Model.TotalCount }"/>
}